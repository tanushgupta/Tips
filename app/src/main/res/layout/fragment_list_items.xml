<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1sp"
        android:id="@+id/cardView"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4sp"
        card_view:cardCornerRadius="3sp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txt_Symbol"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Reliance"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/txt_side_at"
                    android:textSize="14sp"
                    android:textColor="@color/light_graph_blue"
                    android:textStyle="normal|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy at "
                    android:layout_toEndOf="@+id/txt_target_Price"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/txt_price"
                    android:textSize="14sp"
                    android:textColor="@color/light_graph_blue"
                    android:textStyle="normal|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1000"
                    android:layout_toEndOf="@+id/txt_side_at"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/txt_status_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_price"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txt_price_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Price"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_Symbol"/>

                <TextView
                    android:id="@+id/txt_target_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Price"
                    android:layout_toStartOf="@+id/txt_side_at"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txt_Symbol"/>

                <TextView
                    android:id="@+id/txt_stplss_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop Loss"
                    android:paddingRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txt_Symbol"/>

                <TextView
                    android:id="@+id/txt_live_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_price_lbl"
                    android:layout_alignParentLeft="true"
                    android:text="₹1000"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txt_target_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_target_lbl"
                    android:layout_centerHorizontal="true"
                    android:text="₹1000"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/txt_stopLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_alignParentRight="true"
                    android:text="₹1000"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_below="@+id/txt_stplss_lbl"
                    />
                <TextView
                    android:id="@+id/txt_post_adv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:text="Posted By: "
                    android:layout_below="@id/txt_live_price"/>

                <TextView
                    android:text="Unknown analyst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/analyst_name"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="normal|bold"
                    android:layout_below="@+id/txt_live_price"
                    android:layout_toRightOf="@+id/txt_post_adv"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>