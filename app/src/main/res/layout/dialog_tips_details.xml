<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/graph" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_tip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Symbol"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dot_not_selected"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Execute Tip"
                android:layout_alignParentRight="true"
                android:padding="10sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/txt_status_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:padding="2dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txt_tip_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Buy @ blah blah "
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Price"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Loss"
                android:layout_alignParentRight="true"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symbol"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dot_not_selected"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/txt_target_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Price"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dot_not_selected"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/txt_stplss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Loss"
                android:layout_alignParentRight="true"
                android:textColor="@color/dot_not_selected"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_tip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="10dp"/>

    </LinearLayout>
</RelativeLayout>