<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:id="@+id/activity_tip">

    <Button
        android:text="Execute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_exe_tip"
        android:textSize="8sp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView8" />

    <TextView
        android:text="Unknown analyst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analyst_name"
        android:textSize="11sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/txt_stopLoss"
        android:layout_alignStart="@+id/btn_exe_tip"
        android:textAlignment="viewStart" />

    <TextView
        android:text="₹100000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_stopLoss"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginBottom="7dp"
        android:textAlignment="viewStart"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="₹100000.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_live_price"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/txt_target_Price"
        android:layout_alignBottom="@+id/txt_target_Price"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:textAlignment="viewStart" />

    <TextView
        android:text="LIVE PRICE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="9sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/txt_live_price" />

    <TextView
        android:text="TARGET PRICE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="9sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/txt_side_at" />

    <TextView
        android:text="ANALYST "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="9sp"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/txt_target_Price"
        android:layout_alignStart="@+id/analyst_name" />

    <TextView
        android:text="RELIANCE-EQ           "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Symbol"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_alignStart="@+id/textView4"
        android:textAlignment="viewStart"
        android:layout_toStartOf="@+id/txt_side_at"
        android:layout_alignBottom="@+id/txt_side_at" />

    <TextView
        android:text="STOP LOSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="9sp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:text=" ₹1000.00 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_price"
        android:textSize="14sp"
        android:textColor="?attr/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/btn_exe_tip"
        android:layout_alignBottom="@+id/btn_exe_tip"
        android:layout_toStartOf="@+id/btn_exe_tip" />

    <TextView
        android:text="Buy at "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_side_at"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/txt_price"
        android:layout_alignBottom="@+id/txt_price"
        android:layout_toStartOf="@+id/txt_price" />

    <TextView
        android:text="₹10000.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_target_Price"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_alignBaseline="@+id/txt_stopLoss"
        android:layout_alignBottom="@+id/txt_stopLoss"
        android:layout_toEndOf="@+id/textView8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
