<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.symphonyfintech.tips" >

    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.general.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.general.SignUpActivity">
        </activity>
        <activity android:name=".view.tips.TipsMainActivity">
        </activity>
        <activity android:name=".view.general.ScrollingActivity"></activity>
        <activity android:name=".view.tips.TipRow"></activity>
        <activity
            android:name=".view.advisors.Advisor"
            android:parentActivityName=".view.advisors.AdvisorList">
        </activity>
        <activity
            android:name=".view.advisors.AdvisorList"
            android:parentActivityName=".view.general.HomeActivity">
        </activity>
        <activity android:name=".view.advisors.advisor_row"></activity>
        <activity
            android:name=".view.general.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.orders.Orders"
            android:label="@string/label_orders"
            android:parentActivityName=".view.general.HomeActivity">
        </activity>
    </application>

</manifest>