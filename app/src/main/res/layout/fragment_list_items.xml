<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:padding="10sp"
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txt_Symbol"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Reliance"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txt_side_at"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy at "
                android:layout_toEndOf="@+id/txt_target_Price"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txt_price"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1000"
                android:layout_toEndOf="@+id/txt_side_at"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txt_status_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="ACTIVE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txt_price"/>

            <TextView
                android:id="@+id/txt_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Price"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_target_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Price"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:layout_toStartOf="@+id/txt_side_at"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_stplss_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Loss"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/txt_price"
                android:textColor="@color/dot_not_selected"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_live_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="₹1000"
                android:textColor="@android:color/holo_green_light"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txt_target_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="₹1000"
                android:textColor="@color/dot_not_selected" />

            <TextView
                android:id="@+id/txt_stopLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/txt_price"
                android:text="₹1000"
                android:textColor="@color/dot_not_selected"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_post_adv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="14sp"
                android:text="Posted By: "/>

            <TextView
                android:text="Unknown analyst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/analyst_name"
                android:textSize="14sp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>