<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.symphonyfintech.tips" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.general.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".adapters.CustomAdapter.LoginAdapter"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".view.general.SignUpActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <data android:scheme="mailto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.general.OneTouchMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".view.general.ScrollingActivity"></activity>
        <activity
            android:name=".view.advisors.Advisor"
            android:parentActivityName=".view.general.OneTouchMainActivity">
        </activity>
        <activity android:name=".view.advisors.advisor_row"></activity>
        <activity
            android:name=".view.orders.Orders"
            android:label="@string/label_orders"
            android:parentActivityName=".view.general.OneTouchMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
    </application>

</manifest>